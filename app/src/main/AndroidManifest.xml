<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.creators.buket.club">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".BuketClubApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".view.activitys.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activitys.BucketsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activitys.BucketDetalisActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activitys.MapActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activitys.ArtistsBouquetsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activitys.DeliveryInfoFillingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activitys.PaymentTypeActivity"
            android:label="@string/title_activity_payment_type"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activitys.CardInfoFillingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activitys.PayDoneActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activitys.BouquetDeliveryStatusDetalisActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activitys.ReviewActivity"
            android:screenOrientation="portrait" />

        <service
            android:name="com.octo.android.robospice.Jackson2GoogleHttpClientSpiceService"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity android:name=".view.activitys.OrdersActivity"></activity>
    </application>

</manifest>
