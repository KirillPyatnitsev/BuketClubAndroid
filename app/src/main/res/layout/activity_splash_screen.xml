<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/a_ss_coordinator_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_primary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/a_ss_image_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_splash" />

        <LinearLayout
            android:id="@+id/a_ss_linear_buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/a_ss_image_logo"
            android:layout_centerHorizontal="true">
            <Button
                android:id="@+id/a_ss_button_fix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фиксированная цена"/>

            <Button
                android:id="@+id/a_ss_button_flex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Гибкая цена"/>
        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/include_progress"/>

</android.support.design.widget.CoordinatorLayout>
