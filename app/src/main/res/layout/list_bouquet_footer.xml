<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="40dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line_footer"
        android:background="@color/order_background_gray"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_copyright"
        android:layout_marginTop="@dimen/margin_normal"
        android:text="@string/details_copyright"
        android:textSize="8sp"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_below="@id/line_footer"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_buket_club"
        android:layout_marginTop="@dimen/margin_normal"
        android:text="@string/details_buket_club"
        android:textSize="8sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_below="@id/line_footer"/>

</RelativeLayout>