<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/a_m_coordinator_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.creators.buket.club.view.activitys.MapActivity">

    <ImageView
        android:id="@+id/a_m_blur_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/a_m_relative_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>

        <Button
            style="@style/button_default"
            android:text="@string/text_continue"
            android:textSize="@dimen/text_size_normal"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/a_m_relative_action_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/a_m_image_action_bar_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right_action_bar"
            android:layout_marginRight="@dimen/margin_left_right_action_bar"
            android:layout_marginTop="@dimen/margin_top_action_bar_a_bd_close"
            android:src="@drawable/round_action_bar" />


        <include
            android:id="@+id/a_m_action_bar"
            layout="@layout/include_action_bar" />

        <include
            android:id="@+id/a_m_view_filter"
            style="@style/filter_container"
            layout="@layout/include_map_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/a_m_action_bar"
            android:visibility="gone" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
