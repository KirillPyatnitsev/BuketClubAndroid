<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/circles_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/a_bd_relative_bouquet_little"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1000"
                android:layout_gravity="bottom">

                <ImageView
                    android:id="@+id/a_bd_image_big_bouquet_size_little"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle_white"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/a_bd_text_bouquet_size_medium_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_middle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_top_bouquet_type_text_unselected"
                    android:textSize="@dimen/text_size_bouquet_type_unselected"
                    android:textColor="@color/text_color_bouquet_size_unselected"/>

                <View
                    android:layout_below="@id/a_bd_image_big_bouquet_size_little"
                    android:id="@+id/a_bd_view_line_pink_2_1"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_centerInParent="true"
                    android:background="@color/pink"/>

                <View
                    android:id="@+id/a_bd_view_line_pink_2_1_1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/a_bd_view_line_pink_2_1"
                    android:background="@color/white" />

                <View
                    android:id="@+id/a_bd_view_line_pink_2_1_1_1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/a_bd_view_line_pink_2_1"
                    android:background="@android:color/transparent" />

                <View
                    android:id="@+id/a_bd_view_line_pink_2_1_1_2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_above="@id/a_bd_view_line_pink_2_1"
                    android:background="@android:color/transparent" />

                <ImageView
                    android:id="@+id/a_bd_image_min_bouquet_size_medium_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBaseline="@id/a_bd_view_line_pink_2_1"

                    android:layout_alignTop="@id/a_bd_view_line_pink_2_1_1_2"
                    android:layout_alignBottom="@id/a_bd_view_line_pink_2_1_1_1"

                    android:src="@drawable/round_bouquet_type_unselected" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="900"
                android:layout_gravity="bottom"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="-10dp">

                <ImageView
                    android:id="@+id/test_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle_red"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/a_bd_text_bouquet_size_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_middle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_top_bouquet_type_text_selected"
                    android:textSize="@dimen/text_size_bouquet_type_selected"
                    android:textColor="@color/text_color_bouquet_size_selected"/>

                <View
                    android:layout_below="@id/test_image"
                    android:id="@+id/a_bd_view_line_pink_2"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_centerInParent="true"
                    android:background="@color/pink" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/a_bd_view_line_pink_2"
                    android:background="@color/white" />

                <ImageView
                    android:id="@+id/a_bd_image_min_bouquet_size_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/test_image"
                    android:layout_marginTop="-10dp"
                    android:src="@drawable/round_bouquet_type_selected" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1000"
                android:layout_gravity="bottom">

                <ImageView
                    android:id="@+id/test_image_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle_white"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/a_bd_text_bouquet_size_medium_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_middle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_top_bouquet_type_text_unselected"
                    android:textSize="@dimen/text_size_bouquet_type_unselected"
                    android:textColor="@color/text_color_bouquet_size_unselected"/>

                <View
                    android:layout_below="@id/test_image_3"
                    android:id="@+id/a_bd_view_line_pink_2_3"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_centerInParent="true"
                    android:background="@color/pink" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/a_bd_view_line_pink_2_3"
                    android:background="@color/white" />

                <ImageView
                    android:id="@+id/a_bd_image_min_bouquet_size_medium_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/test_image_3"
                    android:layout_marginTop="-10dp"
                    android:src="@drawable/round_bouquet_type_unselected" />

            </RelativeLayout>

        </LinearLayout>



    </RelativeLayout>





</RelativeLayout>