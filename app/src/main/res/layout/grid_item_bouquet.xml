<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/margin_smaller"
    >
    <ImageView
        android:id="@+id/grid_bouquet_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grid_bouquet_title_layout"
        android:layout_below="@id/grid_bouquet_image">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/grid_bouquet_title"
            android:text="Букет из нежных француских роз"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:textSize="12sp"
            android:textColor="@color/gray_text"
            android:layout_marginRight="@dimen/margin_larger"/>
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/grid_bouquet_options_layout"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_options_layout">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/grid_bouquet_options"
            android:src="@drawable/ic_bullets_white"
            android:layout_centerInParent="true"
            android:tint="@color/gray_text"/>
            </RelativeLayout>
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grid_bouquet_price"
        android:layout_below="@id/grid_bouquet_title_layout"
        android:textColor="@color/list_price_color"
        android:text="5550 руб."

        android:textSize="16sp"/>

</RelativeLayout>