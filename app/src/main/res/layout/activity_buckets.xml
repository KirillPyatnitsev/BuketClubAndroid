        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_super_large"
            android:id="@+id/bouquet_size_layout"
            android:background="@color/list_bouquet_color"
            android:layout_below="@id/bouquets_toolbar"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bouquet_size_title"
                android:text="@string/text_bouquet_size"
                android:textColor="#bbffffff"
                android:textSize="10sp"
                android:layout_marginLeft="@dimen/margin_small"
                android:padding="2dp"
                android:gravity="center"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/m_size_layout"
                    android:background="@drawable/selector_size_layout"
                    android:layout_toRightOf="@id/bouquet_size_title">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/m_size_text"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bouquet_bckg_selector"
                android:textColor="@color/bouquet_text_selector"
                android:padding="2dp"
                android:gravity="center"
                android:text="M"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/l_size_layout"
                    android:background="@drawable/selector_size_layout"
                    android:layout_toRightOf="@id/m_size_text">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/l_size_text"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bouquet_bckg_selector"
                android:textColor="@color/bouquet_text_selector"
                android:padding="2dp"
                android:gravity="center"
                android:text="L"/>
            </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/xl_size_layout"
                    android:background="@drawable/selector_size_layout"
                    android:layout_toRightOf="@id/l_size_text">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/xl_size_text"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bouquet_bckg_selector"
                android:textColor="@color/bouquet_text_selector"
                android:text="XL"
                android:padding="2dp"
                android:gravity="center"/>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

                <android.support.v4.widget.SwipeRefreshLayout
                    android:id="@+id/a_b_swipe_refresh"
                    android:layout_below="@id/bouquet_size_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >



                    <com.opendev.buket.club.tools.MyGridView
